{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@domain/*": [
                "domain/*"
            ],
            "@application/*": [
                "application/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@presentation/*": [
                "presentation/*"
            ],
            "@setup/*": [
                "setup/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        
    },
  "exclude": ["eslint.config.js", "node_modules"]
}